{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "esnext",
    "jsx": "react",
    "lib": ["es2016", "dom"],
    "target": "es5",
    "baseUrl": "./src",
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  }
}
